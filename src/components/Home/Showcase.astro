---
import { Image } from "astro:assets";

import SectionTitle from "../ui/SectionTitle.astro";
import ShowcaseCard from "../ui/ShowcaseCard.astro";

import MacBook_Mockup2 from "../../assets/images/MacBook_Mockup2.png";
import MacBook_Mockup3 from "../../assets/images/MacBook_Mockup3.png";
import MacBook_Mockup1 from "../../assets/images/MacBook_Mockup1.png";
import MacBook_Mockup5 from "../../assets/images/MacBook_Mockup5.png";
import FadeInAnimation from "../animations/FadeInAnimation";
---

<section id="projekte" class="w-full h-full mt-28 px-10">
   <FadeInAnimation client:visible>
      <div class="flex flex-col items-center mb-28">
         <SectionTitle>
            <svg
               slot="icon"
               xmlns="http://www.w3.org/2000/svg"
               fill="none"
               viewBox="0 0 24 24"
               stroke-width="1.5"
               stroke="currentColor"
               class="size-4.5"
            >
               <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M9.53 16.122a3 3 0 0 0-5.78 1.128 2.25 2.25 0 0 1-2.4 2.245 4.5 4.5 0 0 0 8.4-2.245c0-.399-.078-.78-.22-1.128Zm0 0a15.998 15.998 0 0 0 3.388-1.62m-5.043-.025a15.994 15.994 0 0 1 1.622-3.395m3.42 3.42a15.995 15.995 0 0 0 4.764-4.648l3.876-5.814a1.151 1.151 0 0 0-1.597-1.597L14.146 6.32a15.996 15.996 0 0 0-4.649 4.763m3.42 3.42a6.776 6.776 0 0 0-3.42-3.42"
               ></path>
            </svg>

            Showcase
         </SectionTitle>
         <h2 class="max-w-[720px] text-center mt-8">
            Services, die Ihrer Marke zu mehr Glanz verhelfen.
         </h2>

         <p class="max-w-[680px] text-center mt-8">
            Entdecken Sie eine Kollektion hochwertiger, innovativer Designs, die
            Marken hervorheben und das Publikum fesseln. Jedes Projekt spiegelt
            mein Engagement für Kreativität und Exzellenz wieder.
         </p>
      </div>
   </FadeInAnimation>

   <div class="grid grid-cols-1 xl:grid-cols-2 gap-x-5 gap-y-8">
      <ShowcaseCard>
         <Image
            class="w-full h-full object-cover rounded-3xl"
            src={MacBook_Mockup3}
            alt="MacBook Mockup"
         />
      </ShowcaseCard>
      <ShowcaseCard>
         <Image
            class="w-full h-full object-cover rounded-3xl"
            src={MacBook_Mockup5}
            alt="MacBook Mockup"
         />
      </ShowcaseCard>

      <ShowcaseCard>
         <Image
            class="w-full h-full object-cover rounded-3xl"
            src={MacBook_Mockup1}
            alt="MacBook Mockup"
         />
      </ShowcaseCard>

      <ShowcaseCard>
         <Image
            class="w-full h-full object-cover rounded-3xl"
            src={MacBook_Mockup2}
            alt="MacBook Mockup"
         />
      </ShowcaseCard>
   </div>
</section>

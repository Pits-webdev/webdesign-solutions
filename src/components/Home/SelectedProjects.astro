---
import DraggableCarousel from "../ui/DraggableCarousel";
import SectionTitle from "../ui/SectionTitle.astro";

import { Image } from "astro:assets";
/* Images */
import image1 from "../../assets/images/Sunglass.png";
import image2 from "../../assets/images/MacBook_Mockup2.png";
import image3 from "../../assets/images/MacBook_Mockup3.png";
import image4 from "../../assets/images/MacBook_Mockup4.png";
import image5 from "../../assets/images/MacBook_Mockup5.png";
import image6 from "../../assets/images/MacBook_Mockup1.png";
---

<section id="ausgewaelt" class="relative w-full h-full mt-28">
   <div class="flex flex-col items-center mb-28 px-10">
      <SectionTitle>
         <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-4.5"
         >
            <path
               stroke-linecap="round"
               stroke-linejoin="round"
               d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z"
            ></path>
         </svg>

         Projekte</SectionTitle
      >
      <h2 class="max-w-[520px] text-center mt-8">Ausgewählte Projekte.</h2>

      <p class="max-w-[1000px] text-center mt-8">
         Hier finden Sie eine kleine Auswahl meiner abgeschlossenen Projekte,
         die meine Leidenschaft, Kreativität und Fachkompetenz widerspiegeln. Ob
         innovative Ideen, einzigartige Designs oder durchdachte Lösungen –
         Einblicke und Geschichten zu meinen Projekten finden Sie in meinem
         Blog.
      </p>
   </div>

   <DraggableCarousel client:visible>
      <div
         class="w-[200px] h-[160px] sm:w-[400px] sm:h-[320px] pointer-events-none"
      >
         <Image
            src={image1}
            alt="porjekte"
            class="w-full h-full object-cover rounded-xl"
            loading={"lazy"}
         />
      </div>
      <div
         class="w-[200px] h-[160px] sm:w-[400px] sm:h-[320px] pointer-events-none"
      >
         <Image
            src={image2}
            alt="porjekte"
            class="w-full h-full object-cover rounded-xl"
            loading={"lazy"}
         />
      </div>
      <div
         class="w-[200px] h-[160px] sm:w-[400px] sm:h-[320px] pointer-events-none"
      >
         <Image
            src={image3}
            alt="porjekte"
            class="w-full h-full object-cover rounded-xl"
            loading={"lazy"}
         />
      </div>
      <div
         class="w-[200px] h-[160px] sm:w-[400px] sm:h-[320px] pointer-events-none"
      >
         <Image
            src={image4}
            alt="porjekte"
            class="w-full h-full object-cover rounded-xl"
            loading={"lazy"}
         />
      </div>
      <div
         class="w-[200px] h-[160px] sm:w-[400px] sm:h-[320px] pointer-events-none"
      >
         <Image
            src={image5}
            alt="porjekte"
            class="w-full h-full object-cover rounded-xl"
            loading={"lazy"}
         />
      </div>
      <div
         class="w-[200px] h-[160px] sm:w-[400px] sm:h-[320px] pointer-events-none"
      >
         <Image
            src={image1}
            alt="porjekte"
            class="w-full h-full object-cover rounded-xl"
            loading={"lazy"}
         />
      </div>
      <div
         class="w-[200px] h-[160px] sm:w-[400px] sm:h-[320px] pointer-events-none"
      >
         <Image
            src={image2}
            alt="porjekte"
            class="w-full h-full object-cover rounded-xl"
            loading={"lazy"}
         />
      </div>
   </DraggableCarousel>
</section>
